{
  "expo": {
    "name": "Nxt Cloud",
    "slug": "nxt-cloud",
    "version": "1.9.0",
    "orientation": "default",
    "icon": "./assets/nxt-logo-nobg.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/nxt-cloud-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Allow NXT Cloud to use Face ID for authentication.",
        "NSMicrophoneUsageDescription": "This app does not require microphone access.",
        "NSPhotoLibraryUsageDescription": "Allow Nxt Cloud to access your photos",
        "NSDocumentPickerUsageDescription": "Allow Nxt Cloud to access your files",
        "CFBundleAllowMixedLocalizations": true,
        "LSSupportsOpeningDocumentsInPlace": true,
        "UISupportsDocumentBrowser": true,
        "UIFileSharingEnabled": true,
        "NSUserActivityTypes": [
          "com.nxtcloud.fileUpload"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/nxt-logo-nobg.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "package": "com.enclave_projects.nxt_cloud",
      "intentFilters": [
        {
          "action": "android.intent.action.SEND",
          "category": ["android.intent.category.DEFAULT"],
          "data": [
            {
              "mimeType": "image/*"
            },
            {
              "mimeType": "video/*"
            },
            {
              "mimeType": "application/*"
            },
            {
              "mimeType": "text/*"
            }
          ]
        },
        {
          "action": "android.intent.action.SEND_MULTIPLE",
          "category": ["android.intent.category.DEFAULT"],
          "data": [
            {
              "mimeType": "image/*"
            },
            {
              "mimeType": "video/*"
            },
            {
              "mimeType": "application/*"
            },
            {
              "mimeType": "text/*"
            }
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/nxt-logo-nobg.png"
    },
    "plugins": [
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow NXT Cloud to use Face ID for authentication.",
          "fingerprintPermission": "Allow NXT Cloud to use fingerprint for authentication."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/nxt-logo-nobg.png",
          "color": "#2563eb",
          "sounds": [
            "./assets/notification_sound.wav"
          ],
          "mode": "production"
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Nxt Cloud to access your photos",
          "savePhotosPermission": "Allow Nxt Cloud to save photos to your library",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ],
    "notification": {
      "icon": "./assets/nxt-logo-nobg.png",
      "color": "#2563eb",
      "androidMode": "default",
      "androidCollapsedTitle": "NXT Cloud",
      "iosDisplayInForeground": true
    },
    "extra": {
      "eas": {
        "projectId": "6becc5be-6583-46a3-8381-b708313e8051"
      }
    },
    "owner": "pranjalsharma_edge"
  }
}
